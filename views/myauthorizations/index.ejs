  <body>

 <% include ../../templates/header.ejs %>

      <div id="maincontent">
        <h1 id="subtitle">My Authorization(s)</h1>

      <script type="text/javascript">
        $(document).ready( function () {
            $('#example').DataTable({
              scrollY: 300,
    paging: false,
    "autoWidth": true,
    "searching": true,
    "ordering": true

            });
        } );
</script>



        <table id="example" class="display" cellspacing="0" width="100%">
        <thead>
          <tr>
            <th> Project      </th>
            <th> Charge Code      </th>
            <th> Date </th>
            <th> Hours Allocated </th>
            <th> Hours Burned </th>
          </tr>
        </thead>
        <tbody>
            <% for(var i = 0; i < workauthorizations.length; i++){ %>
            <%  if (workauthorizations[i].allocationname==currentUser.username) { %>
                <tr>
                  <td>
            <%=workauthorizations[i].title; %>
          </td>
          <td>
            <%=workauthorizations[i].chargecode; %>
          </td>

            <td>
                <%=workauthorizations[i].allocationdate.getFullYear()%> -  <%=workauthorizations[i].allocationdate.getMonth() %>
              </td>
              <td>
                  <%=workauthorizations[i].allocationhours; %>
                </td>
              <td>

                <!-- Sign Up Button START -->
<button id="openModal" class="modal-buttons"><%=workauthorizations[i].hoursburned; %></button>
<!-- Sign Up Button END -->
<!-- Modal START-->
<div id="modal">
  <!-- Modal text information START -->
  <div id="modal-text-box">
    <button title="Close" id="close" class="modal-buttons" style="float: right;">X</button>

    <h2 id="modal-header">Burned Hours</h2>
    <div id="modal-body">


      <form id="subtitle" action="/sol/workauthorizations/<%=workauthorizations[i].id%>?_method=PUT" method="Post">
  <input type="text" name="hoursburned" value="<%=workauthorizations[i].hoursburned; %>" />

  <input id="submenu" type="submit" name="" class="modal-buttons" value="Submit Changes" />
</form>

    </div>
    <!-- Button to close the modal START-->
    <div id="modal-footer">

    </div>
    <!-- Button to close the modal END-->
  </div>
    <!-- Modal text information END -->
</div>
<!-- Modal END -->
              </td>

          </tr>

            <% } else { %>
                <% } %>
              <% } %>
            </tbody>
          </table>
      </div>
      <% include ../../templates/footer.ejs %>

