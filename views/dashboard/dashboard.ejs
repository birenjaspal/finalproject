<!DOCTYPE html>
<html>
  <head>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.bundle.js" charset="utf-8"></script>
      <script
    src="https://code.jquery.com/jquery-3.2.1.min.js"
    integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
    crossorigin="anonymous"></script>

    <% include ../partials/head %>
    <meta charset="utf-8">
    <title>SOL</title>
  </head>
  <body>
    <% include ../../templates/header.ejs %>

      <h1 id="subtitle"> Chart </h1>
      <canvas id="myChart" width="100%" height="50%"></canvas>

      <script>
        var datahours = [];
        var datalabels = [];
        <% for (var i=0; i< workauthorizations.length; i++){ %>
          datahours [<%= i %>] = <%=workauthorizations[i].allocationhours %>
        <% } %>
        <% for (var i=0; i< workauthorizations.length; i++){ %>
          datalabels [<%= i %>] = "<%=workauthorizations[i].title %>"
        <% } %>

        var ctx = document.getElementById("myChart").getContext('2d');
        var myChart = new Chart(ctx, {
          type: 'bar',
          data: {
            labels: datalabels,
            datasets: [{
              label: '# of Hours',
              data: datahours,
              backgroundColor: [
                             'rgba(255, 99, 132, 0.2)',
                             'rgba(54, 162, 235, 0.2)',
                             'rgba(255, 206, 86, 0.2)',
                             'rgba(75, 192, 192, 0.2)',
                             'rgba(153, 102, 255, 0.2)',
                             'rgba(255, 159, 64, 0.2)'
              ],
              borderColor: [
                             'rgba(255,99,132,1)',
                             'rgba(54, 162, 235, 1)',
                             'rgba(255, 206, 86, 1)',
                             'rgba(75, 192, 192, 1)',
                             'rgba(153, 102, 255, 1)',
                             'rgba(255, 159, 64, 1)'
              ],
              borderWidth: 1
            }]
          },
          options: {
            scales: {
              yAxes: [{
                ticks: {
                  beginAtZero:true
                }
              }]
            }
          }
        });
        </script>
      <% include ../../templates/footer.ejs %>
  </body>
</html>
